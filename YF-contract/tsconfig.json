{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "es2020",
    "declaration": true,
    "incremental": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
  }
}
